---
import { Image } from "astro:assets";
import s1 from "../../assets/company/logoadmus.png";
import s2 from "../../assets/company/logoafios.png";
import s3 from "../../assets/company/logoluigui.png";
import s4 from "../../assets/company/logoeva.png";
import s5 from "../../assets/company/logodeseos.png";
import s6 from "../../assets/company/logomiranda.jpg";
import Section from "./Section.astro";
import SectionTitle from "../ui/SectionTitle.astro";

const sponsors = [
  { logo: s6, alt: "Amazon logo" },
  { logo: s5, alt: "Dribble logo" },
  { logo: s4, alt: "HubSpot logo" },
  { logo: s3, alt: "Notion logo" },
  { logo: s2, alt: "Netflix logo" },
  { logo: s1, alt: "Zoom logo" },
];
---

<Section id="sponsors">
  <div id="sponsors-title">
    <SectionTitle
      sectionTitle="Confian en nosotros"
    />
  </div>
  <div class="flex-row items-center">
  <div class="grid grid-cols-3 sm:grid-cols-3 md:grid-cols-6" id="sponsors-grid">
    {
      sponsors.map((sponsor) => {
        return (
          <div class="sponsor-logo p-4 grayscale transition duration-200 hover:grayscale-0">
            <Image src={sponsor.logo} class="h-12 w-auto mx-auto" alt={sponsor.alt} loading="lazy" />
          </div>
        );
      })
    }
  </div>
  </div>
</Section>

<script>
  import { gsap } from 'gsap';

  // Animate sponsors section
  gsap.set('#sponsors-title', { opacity: 0, y: 50 });
  gsap.set('.sponsor-logo', { opacity: 0, scale: 0.8 });

  gsap.to('#sponsors-title', { opacity: 1, y: 0, duration: 0.8, ease: 'power2.out' });

  gsap.to('.sponsor-logo', {
    opacity: 1,
    scale: 1,
    duration: 0.6,
    ease: 'back.out(1.7)',
    stagger: 0.1,
    delay: 0.5
  });
</script>