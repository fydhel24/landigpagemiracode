---
import { formatDate } from "../../utils";
import type { CollectionEntry } from "astro:content";
import ArticleIcon from "../../components/Icons/ArticleIcon.astro";
import VideoIcon from "../../components/Icons/VideoIcon.astro";
import Card from "../ui/Card.astro";

const { article } = Astro.props;

interface Props {
  article: CollectionEntry<"blog">;
}
---

<Card isUnderline={true} id="article-card">
  <article class="p-6 hover:shadow-lg transition-shadow duration-300">
    <div
      class="flex justify-between items-center mb-5 text-gray-500"
      id="article-header"
    >
      <span
        class="bg-gradient-to-r from-miracode-purple to-miracode-cyan text-white text-xs font-medium inline-flex items-center px-3 py-1 rounded-full"
      >
        {article.data.type == "Article" ? <ArticleIcon /> : <VideoIcon />}
        {article.data.type === "Article" ? "Artículo" : "Tutorial"}
      </span>
      <span class="text-sm">{formatDate(article.data.pubDate)}</span>
    </div>
    <h2
      class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white hover:text-miracode-purple transition-colors"
      id="article-title"
    >
      {article.data.title}
    </h2>
    <p
      class="mb-5 font-light text-gray-600 dark:text-gray-300"
      style="white-space: pre-line"
      id="article-summary"
    >
      {article.data.summary}
    </p>
    <div class="flex justify-between items-center" id="article-footer">
      <div class="flex items-center space-x-4">
        <img
          class="w-8 h-8 rounded-full border-2 border-miracode-cyan"
          src={article.data.authImage}
          alt={article.data.author + " cover"}
        />
        <span class="font-medium text-gray-700 dark:text-gray-300">
          {article.data.author}
        </span>
      </div>
      <a
        href={"/articles/" + article.slug}
        class="inline-flex items-center font-medium text-miracode-purple hover:text-miracode-cyan transition-colors duration-200 group"
      >
        Leer más
        <svg
          class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform duration-200"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path></svg
        >
      </a>
    </div>
  </article>
</Card>

<script>
  import { gsap } from "gsap";

  // Animate article card on load
  gsap.set("#article-card", { opacity: 0, y: 30 });
  gsap.to("#article-card", {
    opacity: 1,
    y: 0,
    duration: 0.8,
    ease: "power2.out",
  });
</script>
