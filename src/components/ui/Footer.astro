---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/logo-alt.svg";
import Twitter from "../../assets/twitter.svg";

const logos = [
  { name: "Facebook", src: Facebook, link: "https://facebook.com" },
  { name: "Linkedin", src: Linkedin, link: "https://linkedin.com" },
  { name: "Twitter", src: Twitter, link: "https://twitter.com" },
];
---

<section class="sm:px-5">
  <div class="w-full mx-auto">
    <div class="px-[15px] bg-dark text-gray py-[55px] lg:px-[60px] sm:rounded-t-[45px]">
      <!-- Fila principal: Contacto + Redes -->
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-8 mb-[66px]">
        <!-- Contactos (a la izquierda en lg) -->
        <div class="flex flex-col w-full lg:w-[30%] text-center lg:text-start">
          <h3 class="mb-5 text-center md:text-left text-2xl text-green">Contactos</h3>
          <div class="flex flex-col justify-between gap-4">
            <span>Email: miracode@gmail.com</span>
            <span>Celular: +519 1234567</span>
            <span class="lg:w-3/4">Direcci√≥n: Av/Arequipa 1234, Bolivia</span>
          </div>
        </div>

        <!-- Redes sociales (a la derecha en lg) -->
        <ul class="flex gap-5">
          {logos.map((logo) => (
            <li key={logo.name}>
              <a href={logo.link.trim()} target="_blank">
                <picture>
                  <Image src={logo.src} alt={logo.name} />
                </picture>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Separador -->
      <div class="h-[1px] bg-gray mb-5"></div>

      <!-- Copyright (siempre centrado) -->
      <div class="flex flex-col lg:flex-row h-20 justify-center items-center text-center">
        <span>
          2025 Miracode - by Copiright 
        </span>
      </div>  
    </div>
  </div>
</section>