---
import { Image } from "astro:assets";
import linkd from "../../assets/pics/profile-in.svg";
import Card from "./Card.astro";

const { pic, name, role, description, link } = Astro.props;
---

<Card isUnderline={true} id="team-card">
  <div class="p-[60px]">
    <div class="flex flex-col sm:flex-row relative" id="team-header">
      <picture id="team-image"><Image src={pic} alt={name} /></picture>
      <div class="flex flex-col justify-end sm:ml-5" id="team-info">
        <h3 class="text-lg font-medium">{name}</h3>
        <p class="text-sm font-normal">{role}</p>
      </div>
    </div>
    <div class="w-full h-[1px] bg-black my-7" id="team-separator"></div>
    <div id="team-description">{description}</div>
  </div>
</Card>

<script>
  import { gsap } from 'gsap';

  // Animate team card on load
  gsap.set('#team-card', { opacity: 0, y: 30 });
  gsap.to('#team-card', { opacity: 1, y: 0, duration: 0.8, ease: 'power2.out' });
</script>
